{# app/Resources/views/album/edit.html.twig #}

{% extends 'base.html.twig' %}

{% set page_title = 'album.title.edit_album'|trans ~ ' - ' ~ album.name %}

{% form_theme edit_form default_form_theme _self %}

{% block _album_photos_entry_photo_widget %}
	<div style="vertical-align:middle;font-size:1.5em;display:inline-block;padding-right:10px;">
		<a style="display:block;" class="reorder-photo reorder-photo-up"><i class="fi-arrow-up"></i></a>
		<a style="display:block;" class="reorder-photo reorder-photo-down"><i class="fi-arrow-down"></i></a>
	</div>
     <a target="_blank" class="thumbnail thumbnail-edit-list" href="{{ signed_url_cacher.getUrl(data.sizeOriginal) }}">
     	<img src="{{ signed_url_cacher.getUrl(data.sizeThumb) }}">
     </a>
{% endblock %}


{% block _album_photos_entry_widget %}
	
	<hr>

	<div class="large-4 columns">
		<row>
			{{ form_widget(form.photo) }}
		</row>
	</div>

	<div class="large-8 columns">
		<row>
			{{ form_row(form.title) }}
			{{ form_row(form.caption) }}
			{{ form_row(form.description) }}
			{{ form_row(form.position) }}
		</row>
	</div>
{% endblock %}

{% block body %}

	<div class="row column">
		{{ form_start(edit_form) }}
		<input type="submit" class="button" value="{{ 'album.label.save_album'|trans }}">
		<a class="button" href="{{ path('show_album', {'id': album.id}) }}">{{ 'misc.cancel'|trans }}</a>
		{{ form_widget(edit_form) }}
		{{ form_end(edit_form) }}
	</div>

{% endblock %}